<div id="main-container" class="container">

  <p id="notice"><%= notice %></p>

  <h1 class="headers">Listing Recipients</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Recipient name</th>
        <th>Customer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipients.each do |recipient| %>
        <tr>
          <td><%= recipient.recipient_name %></td>
          <td><%= recipient.customer.customer_id %></td>
          <!-- <td><%= link_to 'Show', recipient %></td>
          <td><%= link_to 'Edit', edit_recipient_path(recipient) %></td>
          <td><%= link_to 'Destroy', recipient, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <p class="nav_link"><%= link_to 'Add New Recipient', new_recipient_path %></p>

</div>
